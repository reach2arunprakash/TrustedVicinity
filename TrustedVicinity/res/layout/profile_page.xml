<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
	android:background="#dddada" >
    <RelativeLayout 		
        android:layout_width="match_parent"
		android:layout_height="match_parent">
    <RelativeLayout 
		android:layout_width="match_parent"
		android:layout_height="match_parent"
			android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
		android:background="@drawable/new_feed_background"
		>

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_launcher" />

        <EditText
            android:id="@+id/textView1"
	        android:layout_width="230dp"
	        android:layout_height="40dp"
            android:background="@drawable/profile_input_box"
            android:layout_below="@id/profile_pic"
            android:layout_centerHorizontal="true"
            android:hint="Firstname Lastname"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/textView2"
	        android:layout_width="230dp"
	        android:layout_height="40dp"
	        android:inputType="number"
            android:background="@drawable/profile_input_box"
            android:hint="+91 - 9876892301"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <!-- -->

	      <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="20dp"
        android:text="Post display range : 3km"
        android:textColor="#004c7f" />

        
		<SeekBar
                android:id="@+id/seekBar1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="15dp" />

	  <TextView
	    android:id="@+id/textView4"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/seekBar1"
	    android:layout_toLeftOf="@+id/textView3"
	    android:text="1KM"
	    android:textAppearance="?android:attr/textAppearanceSmall" />
	  
	  
	<TextView
	    android:id="@+id/textView5"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignRight="@+id/seekBar1"
	    android:layout_below="@+id/seekBar1"
	    android:layout_marginRight="19dp"
	    android:text="10KM"
	    android:textAppearance="?android:attr/textAppearanceSmall" />
		
</RelativeLayout>
	
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2" >

            <Button
                android:id="@+id/Save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:background="@drawable/post_button_background"
                android:text="Save Changes" />

            <Button
                android:id="@+id/Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:background="@drawable/cancel_button_background"
                android:text="Cancel" />
        </LinearLayout>
    </RelativeLayout>
        </RelativeLayout>
</LinearLayout>